<Window x:Class="eq.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ekwipunek" Height="300" Width="400">
    <Grid>
        <StackPanel Name="EquipmentStackPanel" Margin="10">
            <Label FontWeight="Bold" Content="Nakrycie głowy"/>
            <ComboBox Name="czapki" Width="150">
                <ComboBoxItem Content="Brak"/>
                <ComboBoxItem Content="Czapka"/>
                <ComboBoxItem Content="Hełm"/>
            </ComboBox>

            <Label FontWeight="Bold" Content="Zbroja"/>
            <ComboBox Name="ubrania" Width="150">
                <ComboBoxItem Content="Brak"/>
                <ComboBoxItem Content="Zbroja Płytowa"/>
                <ComboBoxItem Content="T-shirt"/>
            </ComboBox>

            <Label FontWeight="Bold" Content="Broń"/>
            <ComboBox Name="bronie" Width="150">
                <ComboBoxItem Content="Brak"/>
                <ComboBoxItem Content="Patyk"/>
                <ComboBoxItem Content="Miecz"/>
            </ComboBox>

            <Button Content="Zapisz" Click="Zapisz eq" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>