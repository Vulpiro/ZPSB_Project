<Window x:Class="ZPSB_SPAGETTI.View.Windows.HabitCreatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZPSB_SPAGETTI.View.Windows"
        mc:Ignorable="d"
        Title="HabitCreatorWindow" Height="450" Width="800">
    <Grid Background="BlanchedAlmond">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Stwórz nawyk"/>
        <TextBox x:Name="TBName" Margin="10" Grid.Row="1"/>
        <TextBox x:Name="TBDescription" Margin="10" Grid.Row="2"/>
        <TextBlock Text="tu będzie czas do wyboru" Grid.Row="3"/>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Margin="10" Content="Zatwierdź" Click="BtnConfirmClick"/>
            <Button Grid.Column="1" Margin="10" Content="Anuluj" Click="BtnCancelClick"/>
        </Grid>


    </Grid>
</Window>
